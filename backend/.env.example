PORT=5000
MONGODB_URI=mongodb://localhost:27017/gatepass
JWT_SECRET=supersecretjwt
JWT_EXPIRES_IN=7d
CLIENT_URL=http://localhost:5173

# Overstay monitor configuration (optional)
# Default hours=6, lookback=72h, initial delay=30s, interval=30min
# For testing you can speed it up, e.g. 20 seconds interval:
# OVERSTAY_INTERVAL_MS=20000
# OVERSTAY_INITIAL_DELAY_MS=0
# OVERSTAY_HOURS=6
# OVERSTAY_LOOKBACK_HR=72

# Data retention (optional)
# Months to retain logs and visitors before auto-purge.
# Default is 3 months if unset.
# RETENTION_MONTHS=3
