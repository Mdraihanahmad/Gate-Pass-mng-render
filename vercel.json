{
  "version": 2,
  "builds": [
  { "src": "api/index.js", "use": "@vercel/node", "config": { "includeFiles": "backend/**" } },
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist", "installCommand": "npm ci --include=dev", "buildCommand": "npm run build" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
